<div class="container">

  <%= render 'errors_messages' %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[Return to Articles Listing Page]', articles_path%>
  </div>

</div>